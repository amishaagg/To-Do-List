<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/white"
        android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:id="@+id/tvTitle"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/tvshowCategory"
            android:ellipsize="end"
            tools:text="Task Title"
            android:textColor="#303030"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Task Subtitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/tvTask"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/tvshowCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:maxWidth="80dp"
            tools:text="CATEGORY"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/litherGray"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:layout_below="@+id/tvTask"
            android:layout_marginTop="15dp"
            android:textColor="@color/litherGray"
            android:visibility="visible"
            android:textSize="12sp"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/tvShowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDate"
            tools:text="22-12-2017"
            android:textColor="@android:color/black"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:layout_alignParentEnd="true"
            tools:text="time"
            android:layout_below="@id/tvTask"
            android:textSize="12sp"
            android:textColor="@color/litherGray"
            android:layout_marginTop="15dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvShowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2:37 AM"
            android:layout_below="@id/tvTime"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:visibility="visible"/>



    </RelativeLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>